<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/register"
    >

<!--Section 1: Admin and Reader buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="100dp"
        >

    <Button
        android:id="@+id/btnAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:backgroundTint="#4CAF50"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnReader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reader"
        android:backgroundTint="#FF9800"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        />
    </LinearLayout>

<!--Section 2: Reader LL: fname, lname, email, pswd, confirmpswd, dob, phone number-->
    <LinearLayout
        android:id="@+id/llReader"
        android:layout_width="260dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="#80F5F5F5"
        android:padding="10dp"
        >

        <!--Row 1: First Name-->
        <EditText
            android:id="@+id/eTfname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:textSize="20dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            />

        <!--Row 2: Last Name-->
        <EditText
            android:id="@+id/eTlname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:textSize="20dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            />

        <!--Row 3: Email-->
        <EditText
            android:id="@+id/eTemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="20dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            />

        <!--Row 4: Password-->
        <EditText
            android:id="@+id/eTpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="20dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="textPassword"
            />

        <!--Row 5: Confirm Password-->
        <EditText
            android:id="@+id/eTconfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:textSize="20dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="textPassword"
            />

        <!--Row 6: DOB-->
        <EditText
            android:id="@+id/eTdob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth: DD/MM/YY"
            android:textSize="20dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="date"
            />

        <!--Row 7: Phone Number-->
        <EditText
            android:id="@+id/eTphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:textSize="20dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="phone"
            />

    </LinearLayout>

<!--Section 3: Admin LL: full name, email, pswd, code: 3210123, answer: BookHeaven-->
    <LinearLayout
        android:id="@+id/llAdmin"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        >

        <EditText
            android:id="@+id/eTadminName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            />

        <EditText
            android:id="@+id/etadminEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            />

        <EditText
            android:id="@+id/eTadminPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            />

        <EditText
            android:id="@+id/eTadminCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Access Code"
            android:inputType="numberPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            />

        <EditText
            android:id="@+id/eTadminAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Security Answer"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            />
    </LinearLayout>

<!--Section 4: Register and Login btn + Logo    -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:backgroundTint="#FF0000"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:padding="10dp"
        />
<!--sans-serif-light: lightweight variation of the default sans-serif font. It provides a clean, modern, and slightly minimalist look.-->

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:textColor="#00FFFF"
        android:textSize="25dp"
        android:padding="10dp"
        android:backgroundTint="#000000"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />

    <!--Logo Section-->
    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        />

</LinearLayout>
